package edu.upenn.cis.cis455.webserver;
import javax.servlet.*;
import javax.servlet.http.*;
import java.io.*;

public class Cookie_Servlet2 extends HttpServlet {
	protected void doGet(HttpServletRequest request,
			HttpServletResponse response) throws ServletException, IOException {
		Cookie[] cookies = request.getCookies();
		Cookie c = null;
		for (int i = 0; i < cookies.length; ++i) {
			if (cookies[i].getName().equals("TestCookie")) {
				c = cookies[i];
			}
		}
		if (c != null) {
			c.setMaxAge(0);
			response.addCookie(c);
		}
		response.setContentType("text/html");
		PrintWriter out = response.getWriter();
		out.write("<HTML><HEAD><TITLE>Cookie Servlet 2</TITLE></HEAD><BODY>");
		if (c == null) {
			out.write("<P>Couldn't retreive value for cookie with name 'TestCookie'.</P>");
		} else {
			out.write("<P>Retrieved value '" + c.getValue() + "' from cookie with name 'TestCookie'.</P>");
			out.write("<P>Deleted cookie (TestCookie,54321) in response.</P>");
		}
		out.write("<P>Continue to <A HREF=\"cookieservlet3\">Cookie Servlet 3</A>.</P>");
		out.write("</BODY></HTML>");
	}
}
