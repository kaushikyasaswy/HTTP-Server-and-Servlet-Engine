package edu.upenn.cis.cis455.webserver;
import java.io.*;
import javax.servlet.*;
import javax.servlet.http.*;

public class CookieWriter extends HttpServlet {
  public void doGet(HttpServletRequest request, HttpServletResponse response) 
       throws java.io.IOException
  {
    response.setContentType("text/html");
    PrintWriter out = response.getWriter();
    String v1 = request.getParameter("cookie1");
    String v2 = request.getParameter("cookie2");
    out.write("<html><head><title>CookieWriter</title></head>");
    
    response.setContentType("text/html");
	PrintWriter pw = response.getWriter();

	Cookie cookie = new Cookie(v1,v2);
	cookie.setMaxAge(60*60); //1 hour
	response.addCookie(cookie);
    out.write("<body>I wrote a cookie!</body></html>");

    //http://localhost:8080/Calculator/CookieWriter?cookie1=test&cookie2=4
  }
}