package edu.upenn.cis.cis455.webserver;
import javax.servlet.*;
import javax.servlet.http.*;
import java.io.*;

public class Cookie_Servlet1 extends HttpServlet {
	protected void doGet(HttpServletRequest request,
			HttpServletResponse response) throws ServletException, IOException {
		Cookie c = new Cookie("TestCookie", "54321");
		c.setMaxAge(36000);
		response.addCookie(c);
		System.out.println("added");
		
		/*Cookie d = new Cookie("TestCookie2", "12345");
		c.setMaxAge(36000);
		response.addCookie(d);*/

		//response.setStatus(408);
		response.setContentType("text/html");
		PrintWriter out = response.getWriter();
		out.write("<HTML><HEAD><TITLE>Cookie Servlet 1</TITLE></HEAD><BODY>");
		out.write("<P>Added cookie (TestCookie,54321) to response.</P>");
		out.write("<P>Continue to <A HREF=\"cookieservlet2\">Cookie Servlet 2</A>.</P>");
		out.write("</BODY></HTML>");	
		
		//response.reset();
		//response.flushBuffer();
	}
}
