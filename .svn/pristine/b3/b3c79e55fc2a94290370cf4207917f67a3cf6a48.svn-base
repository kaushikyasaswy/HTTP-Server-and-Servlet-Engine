package edu.upenn.cis.cis455.webserver;
import java.io.*;
import javax.servlet.*;
import javax.servlet.http.*;

public class CookieReader extends HttpServlet {
  public void doGet(HttpServletRequest request, HttpServletResponse response) 
       throws java.io.IOException
  {
    response.setContentType("text/html");
    
    Cookie[] cookies = request.getCookies();
    String rv = "";
    if (cookies != null) {
    	for(int i = 0; i < cookies.length; i++){
    		rv += cookies[i].getName() + " : " + cookies[i].getValue() + "<br>";
    	}
    }
    PrintWriter out = response.getWriter();
    out.write("<html><head><title> CookieReader </title></head>");
    out.write("<body>" + rv + "</body></html>");

    
	

    //http://localhost:8080/Calculator/CookieReader
  }
}